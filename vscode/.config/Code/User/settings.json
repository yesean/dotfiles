{
  "debug.onTaskErrors": "abort",

  "C_Cpp.updateChannel": "Insiders",

  "colorize.languages": [
    "css",
    "javascript",
    "typescript",
    "sass",
    "scss",
    "less",
    "postcss",
    "sss",
    "stylus",
    "xml",
    "svg"
  ],

  "diffEditor.ignoreTrimWhitespace": false,

  "explorer.confirmDelete": false,

  "explorer.confirmDragAndDrop": false,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[objective-c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[objective-cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[java]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[latex]": {
    "editor.formatOnPaste": false,
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "editor.defaultFormatter": "James-Yu.latex-workshop",
    "editor.formatOnSave": true
  },
  "[systemverilog]": {
    "editor.defaultFormatter": "ericsonj.verilogformat"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": false,
  "editor.fontSize": 12,
  "editor.fontFamily": "FiraMono Nerd Font Mono",
  "editor.formatOnSave": false,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.parameterHints.enabled": false,
  "editor.rulers": [80],
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,

  "files.autoSave": "afterDelay",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  "git.autofetch": true,

  "keyboard.dispatch": "keyCode",

  "javascript.updateImportsOnFileMove.enabled": "always",

  "latex-workshop.view.pdf.viewer": "tab",

  "terminal.integrated.defaultProfile.osx": "/bin/zsh",
  "terminal.integrated.fontFamily": "FiraMono Nerd Font Mono",

  "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/init.vim",
  "vscode-neovim.neovimInitVimPaths.linux": "~/.config/nvim/init.vim",
  "vim.enableNeovim": true,

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "workbench.colorTheme": "Gruvbox Material Dark",
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.enablePreview": true,
  "workbench.startupEditor": "newUntitledFile",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "liveshare.authenticationProvider": "GitHub",
  "window.zoomLevel": 1
}
