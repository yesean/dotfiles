configuration {
  theme: "~/.config/rofi/themes/combi";
  show-icons: true;
  icon-theme: "Paper";
  terminal: "alacritty";
  parse-known-hosts: false;
  matching: "fuzzy";
  sort: true;
  sorting-method: "fzf";
  drun-match-fields: "all";
  drun-display-format: "{name}";
  drun-show-actions: true;
  combi-modi: "drun,ssh,file:~/.config/rofi/scripts/file.sh";
  modi: "combi";
}
