configuration {
  show-icons: true;
  icon-theme: "Paper";
  terminal: "alacritty";
  parse-known-hosts: false;
  matching: "fuzzy";
  sort: true;
  sorting-method: "fzf";
  drun {
    match-fields: "all";
    display-format: "{generic}";
    show-actions: false;
  }
  combi-hide-mode-prefix: true;
  combi-modi: "drun,ssh,file:~/.config/rofi/scripts/file.sh";
  modi: "combi";
}

@theme "~/.config/rofi/themes/combi"
