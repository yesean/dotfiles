# Use pulseaudio-ctl to adjust volume in PulseAudio.
exec --no-startup-id volnoti # start volnoti daemon
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.local/bin/volume.sh up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.local/bin/volume.sh down
bindsym XF86AudioMute exec --no-startup-id ~/.local/bin/volume.sh mute
bindsym XF86AudioMicMute exec --no-startup-id ~/.local/bin/volume.sh mute-mic

# Media player controls
bindsym XF86AudioPause exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# terminal key binding
bindsym $mod+Return exec --no-startup-id $term

# browser key binding
bindsym $mod+shift+Return exec --no-startup-id brave

# file browser key binding
bindsym $mod+mod1+Return exec --no-startup-id nemo

# kill focused window
bindsym $mod+q kill

# only change focus with keyboard
focus_follows_mouse no

# disable focus wrapping
focus_wrapping no

# spotlight equivalent
exec_always --no-startup-id ~/.local/bin/launch-albert.sh
bindsym $mod+Space exec --no-startup-id albert show; [class="albert"] move absolute position center

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+Shift+v split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+b floating toggle

# change focus between tiling / floating windows
bindsym $mod+Shift+b focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# toggle scratchpad (used to minimize windows)
bindsym $mod+Shift+x [floating] move scratchpad
bindsym $mod+minus scratchpad show
bindsym $mod+x move scratchpad

# toggle items in scratchpad
bindsym $mod+mod1+n [floating class="^(?!Morgen)"] move scratchpad; [class="Morgen"] scratchpad show, resize set 2000 1125, move absolute position center
bindsym $mod+mod1+m [floating class="^(?!Todoist)"] move scratchpad; [class="Todoist"] scratchpad show, resize set 2000 1125, move absolute position center
bindsym $mod+mod1+u [floating class="^(?!Caprine)"] move scratchpad; [class="Caprine"] scratchpad show, resize set 2000 1125, move absolute position center
bindsym $mod+mod1+i [floating class="^(?!discord)"] move scratchpad; [class="discord"] scratchpad show, resize set 2000 1125, move absolute position center
bindsym $mod+mod1+o [floating class="^(?!Spotify)"] move scratchpad; [class="Spotify"] scratchpad show, resize set 2000 1125, move absolute position center
bindsym $mod+mod1+p [floating class="^(?!dots)"] move scratchpad; [class="dots"] scratchpad show, resize set 2000 1125, move absolute position center

for_window [class="Morgen"] move scratchpad
for_window [class="Todoist"] move scratchpad
for_window [class="Caprine"] move scratchpad
for_window [class="discord"] move scratchpad
for_window [class="Spotify"] move scratchpad
for_window [class="dots"] move scratchpad

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1; workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2; workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3; workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4; workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5; workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6; workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7; workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8; workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9; workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10; workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will grow the window’s width.
        # Pressing right will shrink the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize grow width 5 px or 5 ppt
        bindsym j resize shrink height 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt
        bindsym l resize shrink width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize grow width 5 px or 5 ppt
        bindsym Down resize shrink height 5 px or 5 ppt
        bindsym Up resize grow height 5 px or 5 ppt
        bindsym Right resize shrink width 5 px or 5 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# bind moving workspaces shortcuts
bindsym $mod+Ctrl+h move workspace to output left
bindsym $mod+Ctrl+l move workspace to output right
bindsym $mod+c move absolute position center

# bind resizing gaps shortcuts
bindsym $mod+i        gaps inner current plus 10
bindsym $mod+Shift+i  gaps inner current minus 10
bindsym $mod+o        gaps outer current plus 10
bindsym $mod+Shift+o  gaps outer current minus 10

# save workspaces shortcut
bindsym $mod+Ctrl+s exec --no-startup-id ~/.local/bin/workspaces.sh save

# flameshot shortcut (for screenshotting)
bindsym $mod+Ctrl+4 exec --no-startup-id flameshot gui
bindsym $mod+Ctrl+3 exec --no-startup-id flameshot full -c

# set gaps
gaps inner 15
gaps outer 0

# style window title
font pango:SF Mono Bold 8
title_align center
for_window [class=".*"] title_format "    %title    "
for_window [class=".*"] border none

# load wallpaper
exec_always --no-startup-id ~/.fehbg &

# start polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh

# start dunst
exec_always --no-startup-id dunst
bindsym $mod+BackSpace exec --no-startup-id dunstctl close-all
bindsym $mod+Shift+BackSpace exec --no-startup-id dunstctl history-pop

# turn off screen blanking
exec --no-startup-id xset s off -dpms

# sleep after idle for 60 minutes
exec --no-startup-id xidlehook --detect-sleep --not-when-audio --not-when-fullscreen --timer 1800 '/home/sean/.local/bin/power.sh sleep' '' &
exec --no-startup-id xidlehook --detect-sleep --not-when-audio --timer 600 '/home/sean/.local/bin/power.sh lock' '' &
bindsym $mod+mod1+l exec --no-startup-id ~/.local/bin/power.sh lock

# disable wakeup from mouse
exec --no-startup-id sudo ~/.local/bin/disable-mouse-wakeup.sh

# start insync
exec --no-startup-id insync start --no-daemon

# restore saved layout
exec --no-startup-id ~/.local/bin/workspaces.sh restore

# start picom
exec_always --no-startup-id picom --experimental-backends -b &
bindsym $mod+Shift+p exec --no-startup-id ~/.local/bin/picom.sh

# start autostart
exec_always --no-startup-id systemctl --user start autostart.target
